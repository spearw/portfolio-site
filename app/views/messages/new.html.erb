
<div class="d-flex p-2 justify-content-center border-top">

  <div class="contact_me p-5">
    <p>Get in touch with me!</p>
    <p>Email: spearw@gmail</p>
    <p>Phone: 1(518)-487-1695</p>
    <p>Or fill out this form:</p>
  </div>

  <div class="form p-5">
    <%= form_for @message, url: create_message_url do |f| %>
      <%= notice %>
      <%= @message.errors.full_messages.join(', ') %>

      <div class='form-group'>
        <%= f.text_field :name, placeholder: 'Your Name', class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.email_field :email, placeholder: 'How can I reach you?', class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.text_area :body, placeholder: 'Message body', class: 'form-control text_area' %>
      </div>
        <%= f.submit 'Send', class: 'btn btn-secondary' %>
    <% end %>
  </div>
</div>